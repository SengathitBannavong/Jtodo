<Page x:Class="Jtodo.Views.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jtodo.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      FontFamily="Segoe UI"
      Title="DetailPage">

    <Page.Resources>
        <!-- Custom RadioButton Style for View Tabs -->
        <Style x:Key="ViewTabRadioButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="Transparent"
                                CornerRadius="15"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <!-- Content Section -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,0" Grid.Row="1">
            <Grid Margin="40,0,40,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="170.517"/>
                    <RowDefinition Height="Auto" MinHeight="104.483"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Background Image Placeholder -->
                <Border Background="#9E9E9E" Margin="-93,0,-82,114" Grid.RowSpan="2">
                    <TextBlock Text="background" 
							   FontSize="24" 
							   Foreground="White" 
							   HorizontalAlignment="Center" 
							   VerticalAlignment="Center"/>
                </Border>
                <!-- Profile Photo (overlaps header with negative margin) -->
                <Border Grid.Row="0"
							Width="145"
							Background="#B0B0B0"
							CornerRadius="20"
							Margin="31,47,0,89"
							HorizontalAlignment="Left" Grid.RowSpan="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="5"/>
                    </Border.Effect>
                    <TextBlock Text="Photo" 
								   FontSize="20" 
								   Foreground="White" 
								   HorizontalAlignment="Center" 
								   VerticalAlignment="Center"/>

                </Border>

                <!-- Title and Description -->
                <StackPanel Grid.Row="1" Margin="0,30,0,0">
                    <TextBlock FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#333">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} #{1}">
                                <Binding Path="ListTitle"/>
                                <Binding Path="ListId"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <TextBlock Text="{Binding ListDescription}"
                               FontSize="14"
                               Foreground="#666"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"
                               MaxWidth="800"
                               HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- View Tabs -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="25"
                        Padding="10"
                        Margin="0,30,0,20"
                        HorizontalAlignment="Left" Width="377">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="TableViewRadio"
                                     Content="Table view"
                                     IsChecked="True"
                                     GroupName="ViewMode"
                                     Style="{StaticResource ViewTabRadioButton}"
                                     Margin="10,5"/>
                        <RadioButton x:Name="GridViewRadio"
                                     Content="Grid view"
                                     GroupName="ViewMode"
                                     Style="{StaticResource ViewTabRadioButton}"
                                     Margin="10,5"/>
                        <RadioButton x:Name="CalendarViewRadio"
                                     Content="Calendar view"
                                     GroupName="ViewMode"
                                     Style="{StaticResource ViewTabRadioButton}"
                                     Margin="10,5"/>
                    </StackPanel>
                </Border>

                <!-- Data Grid -->
                <Border Grid.Row="3"
                        Background="White"
                        CornerRadius="20"
                        Padding="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Column Headers -->
                        <Border Grid.Row="0" 
                                Background="#E0E0E0" 
                                CornerRadius="10,10,0,0"
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.9*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Name" FontWeight="Bold" Margin="10,5"/>
                                <TextBlock Grid.Column="1" Text="Priority" FontWeight="Bold" Margin="10,5"/>
                                <TextBlock Grid.Column="2" Text="Status" FontWeight="Bold" Margin="10,5"/>
                                <TextBlock Grid.Column="3" Text="Type" FontWeight="Bold" Margin="10,5"/>
                                <TextBlock Grid.Column="4" Text="Date" FontWeight="Bold" Margin="10,5"/>
                            </Grid>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Height="300">
                            <ItemsControl ItemsSource="{Binding TodoItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Title}" Margin="10,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Priority}" Margin="10,0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Status}" Margin="10,0"/>
                                                <TextBlock Grid.Column="3" Text="{Binding TypeId}" Margin="10,0"/>
                                                <TextBlock Grid.Column="4" Margin="10,0">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:yyyy-MM-dd} → {1:yyyy-MM-dd}">
                                                            <Binding Path="StartDate"/>
                                                            <Binding Path="DueDate"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- New Task Button -->
                        <Button Grid.Row="2"
                                Content="+ New Task"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                Foreground="#666"
                                HorizontalAlignment="Left"
                                Cursor="Hand"
                                Margin="10,10,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Back Button -->
        <Button
                Content="Back"
                Click="BackButton_Click"
                Background="White"
                BorderThickness="0"
                FontSize="16"
                FontWeight="SemiBold"
                Padding="15,10"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,36,0"
                Opacity="0.9" Height="41" Width="75" Grid.Row="1">
            <Button.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="8" ShadowDepth="2"/>
            </Button.Effect>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Hamburger Menu -->
        <Button x:Name="MenuButton" 
                 Grid.Column="0"
                 Width="30" Height="25"
                 HorizontalAlignment="Left"
                 Background="Transparent"
                 BorderThickness="0"
                 Cursor="Hand"
                 VerticalAlignment="Top"
                 Grid.Row="1"
                 Margin="4,10,0,0"
                >
            <StackPanel VerticalAlignment="Center">
                <Rectangle Fill="#333" Height="3" Width="28" Margin="0,3" RadiusX="1.5" RadiusY="1.5"/>
                <Rectangle Fill="#333" Height="3" Width="28" Margin="0,3" RadiusX="1.5" RadiusY="1.5"/>
                <Rectangle Fill="#333" Height="3" Width="28" Margin="0,3" RadiusX="1.5" RadiusY="1.5"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
