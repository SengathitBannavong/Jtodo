<Page x:Class="Jtodo.Views.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jtodo.Views"
      xmlns:vm="clr-namespace:Jtodo.ViewModels"
      xmlns:domains="clr-namespace:Jtodo.Domains"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeView">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left: lists and controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Lists" FontSize="18" FontWeight="Bold" Margin="0,0,0,8" />

            <!-- ComboBox now binds SelectedValue to SelectedListId and uses Id as SelectedValuePath -->
            <ComboBox
                Grid.Row="1"
                ItemsSource="{Binding TodoLists}"
                SelectedValuePath="Id"
                SelectedValue="{Binding SelectedListId, Mode=TwoWay}"
                DisplayMemberPath="Title"
                Margin="0,0,0,8"/>

            <ListBox Grid.Row="2" ItemsSource="{Binding TodoList}" SelectedItem="{Binding SelectedTodo, Mode=TwoWay}" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                            <TextBlock Text="  -  " />
                            <TextBlock Text="{Binding DueDate, StringFormat={}{0:d}}" Foreground="Gray" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <!-- Right: detail pane -->
        <Border Grid.Column="1" Padding="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Details" FontSize="16" FontWeight="Bold" />
                    <UniformGrid Columns="2" Margin="0,8,0,0">
                        <TextBlock Text="List Id:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedList.Id}" />

                        <TextBlock Text="List Title:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedList.Title}" />

                        <TextBlock Text="Id:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.Id}" />

                        <TextBlock Text="Title:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.Title}" />

                        <TextBlock Text="Description:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.Description}" TextWrapping="Wrap" />

                        <TextBlock Text="Start Date:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.StartDate, StringFormat={}{0:G}}" />

                        <TextBlock Text="Due Date:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.DueDate, StringFormat={}{0:G}}" />

                        <TextBlock Text="Priority:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.Priority}" />

                        <TextBlock Text="Status:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.Status}" />

                        <TextBlock Text="TypeId:" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedTodo.TypeId}" />
                    </UniformGrid>
                    <TextBlock Text="Raw object" FontWeight="Bold" Margin="0,8,0,0" />
                    <TextBox Text="{Binding SelectedTodo, Mode=OneWay}" IsReadOnly="True" Height="120" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
