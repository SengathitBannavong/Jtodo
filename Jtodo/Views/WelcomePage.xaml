<Page x:Class="Jtodo.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jtodo.Views"
      xmlns:vm="clr-namespace:Jtodo.ViewModels"
      xmlns:selectors="clr-namespace:Jtodo.Selectors"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Welcome to JTodo">
    
    <Page.Resources>
        <!-- DataTemplate for New Todo List Button -->
        <DataTemplate x:Key="NewTodoListTemplate">
            <Border Background="#9E9E9E"
                    CornerRadius="20"
                    Margin="15"
                    Width="180"
                    Height="180"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>
                <Button x:Name="NewTodoListButton"
                        Command="{Binding DataContext.CreateNewTodoListCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="+" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="New" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock Text="Todo List" FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>
        </DataTemplate>
        
        <!-- DataTemplate for TodoList items -->
        <DataTemplate x:Key="TodoListTemplate">
            <Border Background="#B0B0B0"
                    CornerRadius="20"
                    Margin="15"
                    Width="180"
                    Height="180"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>
                <Button Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding DataContext.NavigateToDetailCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Title}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="150"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>
        </DataTemplate>
        
        <!-- DataTemplateSelector -->
        <selectors:TodoListGridTemplateSelector x:Key="GridTodoSelector"
                                                NewTodoListTemplate="{StaticResource NewTodoListTemplate}"
                                                TodoListTemplate="{StaticResource TodoListTemplate}"/>
    </Page.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="White" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Hamburger Menu -->
            <Button x:Name="MenuButton" 
                    Grid.Column="0"
                    Width="50" Height="50"
                    Margin="20,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center">
                    <Rectangle Fill="#333" Height="3" Width="28" Margin="0,3" RadiusX="1.5" RadiusY="1.5"/>
                    <Rectangle Fill="#333" Height="3" Width="28" Margin="0,3" RadiusX="1.5" RadiusY="1.5"/>
                    <Rectangle Fill="#333" Height="3" Width="28" Margin="0,3" RadiusX="1.5" RadiusY="1.5"/>
                </StackPanel>
            </Button>

            <!-- Welcome Title -->
            <TextBlock Grid.Column="1"
                       Text="Welcome"
                       FontSize="32"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#333"/>
        </Grid>

        <!-- Content Area with ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="40,30,40,30">
            
            <ItemsControl ItemsSource="{Binding DisplayItems}"
                         ItemTemplateSelector="{StaticResource GridTodoSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

        </ScrollViewer>
    </Grid>
</Page>
